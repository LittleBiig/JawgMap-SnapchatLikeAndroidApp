<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.littlebiig.snapchat.modifyFragment"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmer ou annuler la photo prise"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/lollipopbackground"
        ></ImageView>



    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        >

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/cancelicon"
            ></ImageView>

        <Button
            android:id="@+id/modify_cancel_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Annuler"
            android:layout_marginEnd="30dp"></Button>



        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/confirmicon"
            ></ImageView>


        <Button
            android:id="@+id/modify_confirm_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Confirmer"></Button>
    </LinearLayout>


</LinearLayout>
